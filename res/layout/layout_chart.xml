<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_chart_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hans: "
            android:textColor="#556b92"
            android:textSize="@dimen/textsize_tiny" />

        <TextView
            android:id="@+id/txv_chart_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#454545"
            android:textSize="@dimen/textsize_tiny" />

        <TextView
            android:id="@+id/txv_chart_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="回复"
            android:textColor="#44587c"
            android:textSize="@dimen/textsize_tiny" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_chart_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大胖兔: "
            android:textColor="#556b92"
            android:textSize="@dimen/textsize_tiny" />

        <TextView
            android:id="@+id/txv_chart_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="#454545"
            android:textSize="@dimen/textsize_tiny" />

        <TextView
            android:id="@+id/txv_chart_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="回复"
            android:textColor="#44587c"
            android:textSize="@dimen/textsize_tiny" />
    </LinearLayout>

</LinearLayout>